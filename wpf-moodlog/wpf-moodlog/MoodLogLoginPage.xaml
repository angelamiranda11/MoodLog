<Page x:Class="wpf_moodlog.MoodLogLoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:wpf_moodlog"
      mc:Ignorable="d" 
      d:DesignHeight="640" d:DesignWidth="960"
      Title="MoodLogLoginPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="480"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Width="320" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image x:Name="image" Height="100" Source="Images/MoodLog.png" Margin="10,10,10,40"/>
            <TextBox x:Name="usernameTextBox" Height="25" TextWrapping="NoWrap" Text="Username" Width="200" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center" VerticalContentAlignment="Center" Padding="5,0"/>
            <TextBox x:Name="passwordTextBox" Height="25" TextWrapping="NoWrap" Text="Password" Width="200" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center" VerticalContentAlignment="Center" Padding="5,0"/>
            <Button x:Name="loginButton" Content="LOG IN" Width="200" Margin="10" Height="25" VerticalAlignment="Center" HorizontalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <Label x:Name="label" Content="Don't have an account yet?" Width="200" Height="25" Margin="10" HorizontalContentAlignment="Center" FontStyle="Italic"/>
            <Button x:Name="signupButton" Content="SIGN UP" Width="200" Height="25" Margin="10"/>
        </StackPanel>
    </Grid>
</Page>
